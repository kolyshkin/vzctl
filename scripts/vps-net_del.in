# Remove routing for a given container.
#
# Parameters are passed in environment variables.
# Required parameters:
#   IP_ADDR	- IPs to delete, several addresses should be divided by space
#   VEID	- container ID
# Optional parameters:
#   VE_STATE	- state of the container; could be one of:
#		  starting | stopping | running

. @PKGCONFDIR@/vz.conf
. @SCRIPTDIR@/vps-functions

vzcheckvar IP_ADDR VEID

vzgetnetdev

for IPM in $IP_ADDR; do
	IP=${IPM%%/*}
	vzdelrouting "$IP"
	vzarp del "$IP"
	# Update ip address information
	if [ "$VE_STATE" = 'running' -a -f "$VE_STATE_DIR/$VEID" ]; then
		tr ' ' '\n' <"$VE_STATE_DIR/$VEID" |
		grep -w -v "$IP" | tr '\n' ' ' > "$VE_STATE_DIR/$VEID"
	fi
done
test "$VE_STATE" = 'stopping' && rm -f "$VE_STATE_DIR/$VEID"
exit 0
# end of script
